<%= form_with(model: studio, local: true) do |form| %>
  <% if studio.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(studio.errors.count, "error") %> erros ao salvar estúdio:</h5>
      <ul>
      <% studio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label "Nome *" %>
    <%= form.text_field :name, id: :studio_name, class: 'required' %>
  </div>

  <div class="input-field">
    <%= form.label "CNPJ *" %>
    <%= form.text_field :cnpj, id: :studio_cnpj, class: 'required cnpj' %>
  </div> 

  <div class="input-field">
    <%= form.label "email *" %>
    <%= form.email_field :email, id: :studio_email, class: 'required email' %>
  </div>

  <div class="input-field">
    <%= form.label "descrição" %>
    <%= form.text_area :description, class: 'materialize-textarea', id: :studio_description %>
  </div>

  <div class="row">
    <div class="col m2 offset-m9">
      <div class=" input-field">
        <%= form.submit "Salvar e próximo", disabled:true, class: 'btn blue waves-effects waves-light' %>
      </div>
    </div>
  </div>

<% end %>
