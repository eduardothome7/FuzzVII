<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Studio</th>
      <th>Picture</th>
      <th>Description</th>
      <th>Price hour</th>
      <th>Price weekend</th>
      <th>Price late</th>
      <th>Category event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.studio_id %></td>
        <td><%= room.picture %></td>
        <td><%= room.description %></td>
        <td><%= room.price_hour %></td>
        <td><%= room.price_weekend %></td>
        <td><%= room.price_late %></td>
        <td><%= room.category_event %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

