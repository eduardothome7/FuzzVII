<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Calendar</th>
      <th>Total amount</th>
      <th>Start at</th>
      <th>Duration</th>
      <th>Invites</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.user_id %></td>
        <td><%= event.calendar_id %></td>
        <td><%= event.total_amount %></td>
        <td><%= event.start_at %></td>
        <td><%= event.duration %></td>
        <td><%= event.invites %></td>
        <td><%= event.description %></td>
        <td><%= event.status_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

