<section class="list-itens">
  <% @plans.each do |plan| %>
    <div class="row item">
      <div class="col m1 s2"><div class="thumb"><i class="material-icons"><%= plan.icon.name %></i></div></div>
      <div class="col m10 s9 content"><%= plan.title %></div>
      <div class="col m1 s1 action">
        <!-- Dropdown Trigger -->
        <a class='dropdown-button' href='#' data-activates='dropdown<%= plan.id %>'><i class="material-icons">more_vert</i></a>

        <!-- Dropdown Structure -->
        <ul id='dropdown<%= plan.id %>' class='dropdown-content'>
          <li><%= link_to edit_plan_path(plan) do %><i class="material-icons">edit</i> Editar<% end %></li>
          <li><%= link_to plan, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="material-icons">delete</i> Excluir<% end %></li>       
        </ul>
      </div>     
    </div>
  <% end %>
</section>