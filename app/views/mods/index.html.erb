<p id="notice"><%= notice %></p>

<h1>Mods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Description</th>
      <th>Icon</th>
      <th>Slug</th>
      <th>Category mod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mods.each do |mod| %>
      <tr>
        <td><%= mod.name %></td>
        <td><%= mod.title %></td>
        <td><%= mod.description %></td>
        <td><%= mod.icon_id %></td>
        <td><%= mod.slug %></td>
        <td><%= mod.category_mod.name %></td>
        <td><%= link_to 'Show', mod %></td>
        <td><%= link_to 'Edit', edit_mod_path(mod) %></td>
        <td><%= link_to 'Destroy', mod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mod', new_mod_path %>
